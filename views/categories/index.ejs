<!doctype html>
<html lang="en">
    <head>
        <%- include('../head') %>
      </head>
      <body>
        <%- include('../nav') %>

        <div class="container-fluid pt-3">
            <h4><i class="fas fa-tasks"></i> Listagem de Categorias</h4>
            <a class="btn btn-secondary" href="/categories/create"><i class="fas fa-plus"></i> Nova Categoria</a><br />

            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Categoria</th>
                        <th scope="col">Ações</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% categories.forEach(category => { %>
                        <tr>
                            <th scope="row"><%= category.name %></th>
                            <td>
                                <i class="fas fa-eye"></i> Publicações | 
                                <a class="text-dark" href="/categories/edit/<%= category.id %>"><i class="fas fa-edit"></i> Editar</a> | 
                                <a class="text-dark" href="/categories/destroy/<%= category.id %>"><i class="fas fa-trash"></i> Excluir</a><br />
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <%- include('../footer') %>
    </body>
</html>
