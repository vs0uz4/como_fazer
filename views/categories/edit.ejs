<!doctype html>
<html lang="en">
    <head>
        <%- include('../head') %>
    </head>
    <body>
        <%- include('../nav') %>

        <div class="container-fluid pt-3">
            <h4><i class="fas fa-tasks"></i> Edição da Categoria - <span class="badge badge-secondary"><%= category.name %></span></h4>

            <form method="POST" action="/categories/update/<%= category.id %>">
                <div class="form-group">
                    <label for="name">Nome</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>" placeholder="Insira o Nome da Categoria" required>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <a href="javascript:history.back()" class="btn btn-secondary"><i class="fas fa-chevron-left"></i> Voltar</a>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Salvar</button>
                    </div>
                </div>
            </form>
        </div>

        <%- include('../footer') %>
    </body>
</html>
