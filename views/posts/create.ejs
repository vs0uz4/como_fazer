<!doctype html>
<html lang="en">
    <head>
        <%- include('../head') %>
    </head>
    <body>
        <%- include('../nav') %>

        <div class="container-fluid pt-3">
            <h4><i class="fas fa-newspaper"></i> Nova Publicação</h4>
            <form method="POST" action="/posts/store">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Insira o Título da Publicação" required>
                </div>
                <div class="form-group">
                    <label for="category">Categoria</label>
                    <select class="form-control" id="category" name="category">
                        <% categories.forEach( category => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="content">Conteúdo</label>
                    <textarea class="form-control" id="content" name="content" placeholder="Insira o Conteúdo da Publicação" rows="10" required></textarea>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <a href="javascript:history.back()" class="btn btn-secondary"><i class="fas fa-chevron-left"></i> Voltar</a>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Salvar</button>
                    </div>
                </div>
            </form>
        </div>

        <%- include('../footer') %>
    </body>
</html>
